# Brewfile - Declarative Homebrew dependencies
# Install with: brew bundle

# Core tools
brew "fish"
brew "neovim"
brew "git"
brew "fzf"
brew "bat"
brew "ripgrep"

# Python environment
brew "pyenv"
brew "pyenv-virtualenv"

# Formatters
brew "stylua"

# Casks (GUI applications and fonts)
cask "ghostty"
cask "font-fira-code-nerd-font"
